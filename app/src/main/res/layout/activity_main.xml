<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Voir la galerie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/galery_button"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="138dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="139dp"/>
    <EditText
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/codeEventEditText"
            android:hint="Code évènement"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/galery_button"
            android:textAlignment="center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="88dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="88dp"/>
    <ImageView
            android:layout_width="227dp"
            android:layout_height="200dp"
            android:id="@+id/chopTaPhotoImg"
            android:layout_marginBottom="262dp"
            app:layout_constraintBottom_toTopOf="@+id/codeEventEditText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="92dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="104dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="92dp"
            android:src="@drawable/logo" />

</androidx.constraintlayout.widget.ConstraintLayout>